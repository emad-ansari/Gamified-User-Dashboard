{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "ES2021",
      "DOM"  
    ],
    "types": [
      "node"  
    ],
    "module": "commonjs",
    "moduleResolution": "node",  
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"  
  ],
  "exclude": [
    "node_modules"  
  ]
}